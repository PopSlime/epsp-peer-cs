                    </ui:SimpleStackPanel>
                </ui:SimpleStackPanel>
                <ui:SimpleStackPanel Spacing="16" Margin="16">
                    <TextBlock Text="「揺れた！」" Style="{StaticResource SubtitleTextBlockStyle}" />
                    <Label Content="あなたの発信地域" />
                    <ComboBox SelectedIndex="0">
                        <ComboBoxItem Content="東京" />
                    </ComboBox>
                    <Label Content="発信方法" />
